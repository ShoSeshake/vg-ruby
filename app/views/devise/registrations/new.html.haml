.user_form
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    %h2.sign_up
      SIGN UP
    .field
      = f.label :name
      %br/
      = f.email_field :name, class:"user-field", autofocus: true
    .field
      = f.label :email
      %br/
      = f.email_field :email, class:"user-field", autofocus: true, autocomplete: "email"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, class:"user-field", autocomplete: "new-password"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, class:"user-field", autocomplete: "new-password"
    .field
      = f.label :prefecture_id
      %em (optional)
      %br/
      = f.collection_select :prefecture_id, Prefecture.all, :id, :name
    .field
      = f.label :country_id
      %em (optional)
      %br/
      = f.collection_select :country_id, Country.all, :id, :name
    .actions
      = f.submit "Sign up", class:"submit"
  -# = render "devise/shared/links"
