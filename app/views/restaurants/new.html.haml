.container
  .restaurants-new
    =form_for @restaurant, method: :post do |f|
      .restaurants-new__main
        .restaurants-new__main__left
          .form-title
            Photo
          =f.label :url,class:"photo-btn",required:"required" do
            Upload Photo
            = f.file_field :url,required:"required"
          .restaurants-new__main__left__box
        .restaurants-new__main__right
          .form-title
            Name
          =f.text_field :name,class:"readonly",required:"required",value:"name",readonly:"readonly"
          .form-title
            Location
          =f.text_field :prefecture_id,class:"readonly",required:"required",readonly:"readonly"
          .form-title
            Price Range
          = f.collection_select :lunch_price_id, LunchPrice.all, :id, :name,{prompt:"---"}
          .form-title
            Visited Time
          =f.text_field :visited_time,required:"required"
      .form-title
        Text
      =f.text_area :text,required:"required"
      .flex-box
        .form-title
          Vegan Friendly
          = f.collection_select :vegan_friendly_id, VeganFriendly.all, :id, :name,{prompt:"---",required:"required"}
        .form-title
          Review
          .restaurant__review
            -10.times do |n|
              -n+=1
              =fa_icon 'apple', class:"icon-apple", "data-id":n
          =f.hidden_field :review,required:"required"
          -# =f.hidden_field :gurunavi_id 
      =f.submit 'POST', class:"submit-btn"
