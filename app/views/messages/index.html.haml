.chat
  .chat__sidebar
    .chat__sidebar__title
      CHAT ROOM
    -@chats.each do |c|
      .chat__sidebar__menu.clearfix
        = link_to edit_chat_path(c),remote:"true",class:"edit-button" do
          =fa_icon 'edit', class:"edit-icon"
        =link_to chat_api_messages_path(c.id), remote:"true",class:"chat-link" do
          .chat__sidebar__menu__name
            =c.name
          .chat__sidebar__menu__message{class:"message-#{c.id}"}
            =c.show_last_message.truncate(30)
  .chat__main#chat-main
-# = render partial:"chats/edit", locals: { chat: @chats.first }